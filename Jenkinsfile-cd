pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins-deployer
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:v1.23.2-debug
    command: ["/busybox/sh","-c"]
    args: ["tail -f /dev/null"]
    tty: true
    volumeMounts:
    - name: docker-config
      mountPath: /kaniko/.docker

  - name: kubectl
    image: dtzar/helm-kubectl:3.15.3
    command: ["/bin/sh","-c"]
    args: ["tail -f /dev/null"]
    tty: true

  volumes:
  - name: docker-config
    secret:
      secretName: nexus-docker
      items:
      - key: .dockerconfigjson
        path: config.json
"""
    }
  }

  environment {
    REGISTRY = "10.100.247.93:5000"
    IMAGE    = "sonar-demo"
    TAG      = "${BUILD_NUMBER}"
    FULL_IMG = "${REGISTRY}/${IMAGE}:${TAG}"
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/devops-uk/sonar-demo.git'
      }
    }

    stage('Kaniko Build & Push') {
      steps {
        container('kaniko') {
          sh '''
            set -eux
            echo "Workspace: $(pwd)"
            ls -lah
            test -f Dockerfile

            /kaniko/executor \
              --context "$(pwd)" \
              --dockerfile "$(pwd)/Dockerfile" \
              --destination "${FULL_IMG}" \
              --insecure \
              --skip-tls-verify
          '''
        }
      }
    }

    stage('Deploy to K8s') {
      steps {
        container('kubectl') {
          sh '''
            set -eux
            kubectl -n apps apply -f sonar-demo-k8s.yaml
            kubectl -n apps set image deployment/sonar-demo sonar-demo="${FULL_IMG}"
            kubectl -n apps rollout status deployment/sonar-demo --timeout=180s
            kubectl -n apps get pods -o wide
          '''
        }
      }
    }

    stage('HTTP Validate') {
      steps {
        container('kubectl') {
          sh '''
            set -eux
            kubectl -n apps run --rm -i curltest --image=curlimages/curl --restart=Never -- \
              sh -c 'curl -fsS http://sonar-demo.apps.svc.cluster.local/health && echo PASS'
          '''
        }
      }
    }
  }
}

